<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.sleepace.p401msdk.demo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_bg"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin" >

        <RelativeLayout
            android:id="@+id/layout_start_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_item_height"
            android:background="@drawable/page_item_bg" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_right"
                android:text="@string/time"
                android:textColor="@drawable/label_text_color"
                android:textSize="@dimen/Title_3" />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/COLOR_4"
                android:textSize="@dimen/Title_3" />
        </RelativeLayout>

        <include layout="@layout/divider_line" />

        <RelativeLayout
            android:id="@+id/layout_repeat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_item_height"
            android:background="@drawable/page_item_bg" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_right"
                android:text="@string/reply"
                android:textColor="@drawable/label_text_color"
                android:textSize="@dimen/Title_3" />

            <TextView
                android:id="@+id/tv_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/COLOR_4"
                android:textSize="@dimen/Title_5" />
        </RelativeLayout>

        <include layout="@layout/divider_line" />

        <RelativeLayout
            android:id="@+id/layout_music"
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_item_height"
            android:background="@drawable/page_item_bg" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_right"
                android:text="@string/music"
                android:textColor="@drawable/label_text_color"
                android:textSize="@dimen/Title_3" />

            <TextView
                android:id="@+id/tv_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="@color/COLOR_4"
                android:textSize="@dimen/Title_3" />
        </RelativeLayout>

        <include layout="@layout/divider_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_item_height" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/smart_wake"
                android:textColor="@drawable/label_text_color"
                android:textSize="@dimen/Title_3" />

            <CheckBox
                android:id="@+id/cb_smart_wake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:checked="true"
                android:button="@drawable/cb_switch_bg" />
        </RelativeLayout>

        <include layout="@layout/divider_line" />

        <LinearLayout
            android:id="@+id/layout_smart_wake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/page_item_bg" 
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/page_item_height"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/ic_right"
                    android:text="@string/wake_range"
                    android:textColor="@drawable/label_text_color"
                    android:textSize="@dimen/Title_3" />

                <TextView
                    android:id="@+id/tv_wake_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/COLOR_4"
                    android:textSize="@dimen/Title_3" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_tips_wake_range"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                android:layout_marginBottom="10dp"
                android:text="@string/smart_wake_turn_on"
                android:textColor="@color/COLOR_4"
                android:textSize="@dimen/Title_4" />

            <include layout="@layout/divider_line" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_snooze_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/page_item_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/page_item_height"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/ic_right"
                    android:text="@string/snooze_duration"
                    android:textColor="@drawable/label_text_color"
                    android:textSize="@dimen/Title_3" />

                <TextView
                    android:id="@+id/tv_snooze_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/COLOR_4"
                    android:textSize="@dimen/Title_3" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_tips_snooze_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                android:layout_marginBottom="10dp"
                android:text="@string/snooze_turn_on"
                android:textColor="@color/COLOR_4"
                android:textSize="@dimen/Title_4" />
        </LinearLayout>

        <include layout="@layout/divider_line" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/volume"
            android:textColor="@drawable/label_text_color"
            android:textSize="@dimen/Title_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_item_height" 
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/et_volume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/et_bg"
                android:hint="1-8"
                android:inputType="number"
                android:lines="1"
                android:maxLength="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/COLOR_3"
                android:textSize="@dimen/Title_3" />

            <Button
                android:id="@+id/btn_send_volume"
                style="@style/common_bt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="0dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="@string/send"
                android:textSize="@dimen/Title_2" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_save"
            style="@style/common_bt"
            android:layout_height="@dimen/btn_height"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="20dp"
            android:text="@string/save"
            android:textSize="@dimen/Title_2" />

        <Button
            android:id="@+id/btn_preview"
            style="@style/common_bt"
            android:layout_height="@dimen/btn_height"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="15dp"
            android:text="@string/preview_alarm"
            android:textSize="@dimen/Title_2" 
            android:visibility="gone"
            />

        <Button
            android:id="@+id/btn_delete"
            style="@style/common_bt"
            android:layout_height="@dimen/btn_height"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_del_bg"
            android:text="@string/delete_alram"
            android:textSize="@dimen/Title_2" />
    </LinearLayout>

</LinearLayout>