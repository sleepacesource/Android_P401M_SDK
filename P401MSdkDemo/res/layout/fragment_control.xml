<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_margin"
    android:paddingRight="@dimen/activity_margin" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/music"
        android:textColor="@color/COLOR_4"
        android:textSize="@dimen/Title_3" />

    <TextView
        android:id="@+id/tv_music"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginTop="4dp"
        android:background="@drawable/item_text_selector"
        android:drawableRight="@drawable/ic_right"
        android:paddingLeft="10dp"
        android:paddingRight="8dp"
        android:textColor="@color/COLOR_3"
        android:textSize="@dimen/Title_3" 
        android:gravity="center_vertical"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/loop_mode"
        android:textColor="@color/COLOR_4"
        android:textSize="@dimen/Title_3" />

    <TextView
        android:id="@+id/tv_loop_mode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:layout_marginTop="4dp"
        android:background="@drawable/item_text_selector"
        android:drawableRight="@drawable/ic_right"
        android:paddingLeft="10dp"
        android:paddingRight="8dp"
        android:textColor="@color/COLOR_3"
        android:textSize="@dimen/Title_3" 
        android:gravity="center_vertical"
        />

    <Button
        android:id="@+id/btn_play"
        style="@style/common_bt"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"
        android:text="@string/play"
        android:textSize="@dimen/Title_2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/volume"
        android:textColor="@color/COLOR_4"
        android:textSize="@dimen/Title_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/page_item_height"
        android:layout_marginTop="4dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_volume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/et_bg"
            android:hint="1-8"
            android:inputType="number"
            android:lines="1"
            android:maxLength="1"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/COLOR_3"
            android:textSize="@dimen/Title_3" />

        <Button
            android:id="@+id/btn_send_volume"
            style="@style/common_bt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_height"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="0dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="@string/send"
            android:textSize="@dimen/Title_2" />
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/timer_stop"
            android:textColor="@color/COLOR_3"
            android:textSize="@dimen/Title_4" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="@string/smart_stop_music"
            android:textColor="@color/COLOR_3"
            android:textSize="@dimen/Title_4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/execute_progress_win_bg"
            android:drawableRight="@drawable/ic_right"
            android:textColor="@color/COLOR_3"
            android:textSize="@dimen/Title_4" 
            android:paddingTop="8dp"
            android:paddingRight="6dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            />

        <TextView
            android:id="@+id/tv_smart_stop_flag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/execute_progress_win_bg"
            android:drawableRight="@drawable/ic_right"
            android:textColor="@color/COLOR_3"
            android:textSize="@dimen/Title_4" 
            android:paddingTop="8dp"
            android:paddingRight="6dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        style="@style/common_bt"
        android:layout_height="@dimen/btn_height"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="20dp"
        android:text="@string/save"
        android:textSize="@dimen/Title_2" 
        />

</LinearLayout>